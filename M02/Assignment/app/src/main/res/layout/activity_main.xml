<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/cl">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_fetch"
        android:text="fetch Countries Button"
        app:layout_constraintTop_toTopOf="@+id/cl"
        app:layout_constraintLeft_toLeftOf="@+id/cl"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_frag"
        android:text="open frag"
        app:layout_constraintTop_toBottomOf="@+id/btn_fetch"
        app:layout_constraintLeft_toLeftOf="@id/cl"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="countriesTextView"
        android:id="@+id/tv_ctv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/cl"
        app:layout_constraintTop_toBottomOf="@+id/btn_frag"
        android:elevation="20dp"
        />

        />

</androidx.constraintlayout.widget.ConstraintLayout>